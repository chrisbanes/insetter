<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <merge>

        <View
            android:id="@+id/padding_syswin_left_gest_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:paddingLeftSystemWindowInsets="@{true}"
            app:paddingRightSystemGestureInsets="@{true}" />

        <View
            android:id="@+id/padding_syswin_top_gest_bottom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:paddingTopSystemWindowInsets="@{true}"
            app:paddingBottomSystemGestureInsets="@{true}" />

        <View
            android:id="@+id/padding_syswin_top_gest_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:paddingTopSystemWindowInsets="@{true}"
            app:paddingTopSystemGestureInsets="@{true}" />

        <View
            android:id="@+id/padding_syswin_pad_vertical_gest_margin_horiz"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:paddingTopSystemWindowInsets="@{true}"
            app:paddingBottomSystemWindowInsets="@{true}"
            app:layout_marginLeftSystemGestureInsets="@{true}"
            app:layout_marginRightSystemGestureInsets="@{true}" />

    </merge>
</layout>
